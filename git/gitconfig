[alias]
    ci = commit
    ca = commit --amend
    co = checkout
    cob = checkout -b
    br = branch
    fpo = format-patch --stdout
    fp = format-patch
    lol = log --graph --decorate --pretty=oneline --abbrev-commit --all
    pff = pull --ff-only
    pull = pull --ff-only
    stat = status
    up = !git fetch origin && git rebase origin/master
    unstage = reset HEAD
    uncommit = reset --soft HEAD^

[sendemail]
    supressfrom = true

[color]
    ui = auto

[merge]
    ff = only
    summary=true

