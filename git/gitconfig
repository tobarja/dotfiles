[user]
    name = Andrew Thompson
    email = andrew@tobarja.com

[core]
    editor = vi

[alias]
    adp = add --patch
    bo = checkout -p
    br = branch
    ci = commit
    cim = commit -m
    ca = commit --amend
    co = checkout
    cob = checkout -b
    difw = diff --word-diff
    fpo = format-patch --stdout
    fp = format-patch
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ll = log --graph --date=short
    pff = pull --ff-only
    pull = pull --ff-only
    prb = pull -r
    rem = remote -v
    scrub = checkout --
    stat = status -sb
    unstage = reset HEAD
    uncommit = reset --soft HEAD^
    up = !git fetch origin && git rebase origin/master

[sendemail]
    supressfrom = true

[color]
    ui = auto

[merge]
    ff = only
    summary=true

[push]
    default = upstream
    #simple is not supported on ubuntu 12.04LTS because git is too old

[url "git@github.com:"]
	insteadOf = https://github.com/
